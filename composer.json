{
  "name": "mindkomm/woocommerce-email-text-edit",
  "description": "Modify email texts used in your WooCommerce emails without having to edit email templates.",
  "license": "MIT",
  "authors": [
    {
      "name": "Lukas Gaechter",
      "email": "lukas.gaechter@mind.ch"
    }
  ],
  "require-dev": {
    "timber/teak": "^1.0"
  },
  "autoload": {
    "files": [
      "woocommerce-email-text-edit.php"
    ]
  },
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "scripts": {
    "i18n": "wp i18n make-pot . languages/woocommerce-email-text-edit.pot --domain='woocommerce-email-text-edit' --package-name='woocommerce-email-text-edit'",
    "doc": "./vendor/bin/teak generate:hook-reference ./lib --output ./docs --hook_type=filter --file_name=filters --file_title='Filter Hooks'"
  }
}
